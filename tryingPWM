#include "mbed.h"

PwmOut myled(LED1);
PwmOut myled2(LED2);
PwmOut myled3(LED3);

int main() {
   while(1)
   {
   float i=1;
    while(i>=0) {
        myled = i;
        wait(0.0166);
        i-=0.004;
        }
        myled = 1;
     i=1;
    while(i>=0) {
        myled2 = i;
        wait(0.0166);
        i-=0.004;
        }
        myled2 = 1;
           i=1;
    while(i>=0) {
        myled3 = i;
        wait(0.0166);
        i-=0.004;
        }
        myled3 = 1;
}
}
